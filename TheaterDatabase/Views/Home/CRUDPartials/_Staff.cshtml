@model TheaterDatabase.ViewModels.CRUD_VMs.StaffVM



<h3>Staff</h3>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered" id="staff-table">
                <thead>
                    <tr>
                        <th>
                            <span>@Html.DisplayNameFor(m => m.IntStaffID)</span>
                        </th>
                        <th>
                            <span>@Html.DisplayNameFor(m => m.StrPosition)</span>
                        </th>
                        <th>
                            <span>@Html.DisplayNameFor(m => m.Member)</span>
                        </th>
                        <th>
                            <span>@Html.DisplayNameFor(m => m.Show)</span>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model.LstStaff)
                {
                    <tr>
                        <td>
                            <span class="divNoEditing">@Html.DisplayFor(modelItem => item.IntStaffID)</span>
                        </td>
                        <td>
                            <span class="divNoEditing">@Html.DisplayFor(modelItem => item.StrPosition)</span>
                        </td>
                        <td>
                            <span class="divNoEditing">@Html.DisplayFor(modelItem => item.Member.StrName)</span>
                        </td>
                        <td>
                            <span class="divNoEditing">@Html.DisplayFor(modelItem => item.Show.StrName)</span>
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.IntStaffID }) |
                            @Html.ActionLink("Detail", "Detail", new { id = item.IntStaffID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.IntStaffID })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>




<br />
<hr />
<br />

<div class="row divNoNewRow">
    <div class="col">
        <p class="float-right">
            <button class="m-1 btn btn-primary" onclick="showInsertRow('staff')">Insert Row</button>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-2 divYesNewRow">
        @Html.EditorFor(model => model.StrPosition, new { htmlAttributes = new { @class = "form-control", @placeholder = "Position", @data_cast = "new_strPosition" } })
    </div>
    <div class="col-3 divYesNewRow">
        @Html.DropDownListFor(model => model.IntMemberID, new SelectList(Model.LstAllMembers, "IntMemberID", "StrName"), new { @class = "form-control", @data_cast = "new_memberID" })
    </div>
    <div class="col-3 divYesNewRow">
        @Html.DropDownListFor(model => model.IntShowID, new SelectList(Model.LstAllShows, "IntShowID", "StrName"), new { @class = "form-control", @data_cast = "new_showID" })
    </div>
    <div class="col divYesNewRow">
        <button class="m-1 btn btn-primary" onclick="insertStaff()">Insert</button>
        <button class="m-1 btn btn-primary" onclick="hideInsertRow('staff')">Cancel Insert</button>
    </div>
</div>